<Window x:Class="ImageDesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Manager" Height="500" Width="400">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="15*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <DataGrid x:Name="ImageTable" ItemsSource="{Binding Images}" AutoGenerateColumns="False" CanUserAddRows="False" Width="Auto" Grid.Row="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="1*" />
                <DataGridTemplateColumn Header="Изображение" Width="1*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding ImageSource}" Height="70" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            
            <Button Content="ДОБАВИТЬ" Click="AddImage_Click" Grid.Column="0"/>
            <Button x:Name="UpdateButton" Content="ИЗМЕНИТЬ" Click="EditImage_Click" IsEnabled="False" Grid.Column="1"/>
            <Button Content="УДАЛИТЬ" Click="DeleteImage_Click" Grid.Column="2"/>
        </Grid>


    </Grid>
</Window>

